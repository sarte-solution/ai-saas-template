{
  "name": "ai-saas-template",
  "version": "1.0.0",
  "description": "一个现代化、生产就绪的 AI SaaS 应用模板. 基于 Next.js 15 构建，集成了用户认证、支付系统、AI 功能、国际化、文档系统和完整的管理后台。",
  "author": "gegarron <gejialun88@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/geallenboy/ai-saas-template",
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "biome check --write .",
    "lint:check": "biome check .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "postinstall": "fumadocs-mdx",
    "test": "vitest run",
    "test:dev": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next dist coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "prepare": "husky",
    "ci": "pnpm run type-check && pnpm run lint:check && pnpm run test",
    "quality:check": "pnpm run type-check && pnpm run lint:check && pnpm run format:check && pnpm run test:coverage",
    "quality:fix": "pnpm run format && pnpm run lint && pnpm run test",
    "deps:check": "pnpm outdated",
    "deps:update": "pnpm update --latest",
    "docs:dev": "next dev docs",
    "docs:build": "next build docs",
    "test:unit": "vitest run --reporter=verbose",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "playwright test"
  },
